extends ../layout/index

block contenido
    .py-10
        h1.text-4xl.font-extrabold.text-center Bienes  
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina
        
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for='email') Tu Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(
                            placeholder="Tu Email" type="email" name="email" )
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for='password') Tu Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(
                            placeholder="Tu password" type="password" name="password" )
                   
                    div.flex.items-center.justify-between  
                        a.text-sm.text-gray-500(href="/auth/registro") ¿No tienes una cuenta? Crear cuenta
                        a.text-sm.text-gray-500(href="/auth/olvide-password") ¿Olvidaste tu password? 

                    input(type="submit" value="Iniciar Sesion" class="bg-blue-600 w-full text-white uppercase font-bold py-3 rounded-md hover:cursor-pointer hover:bg-blue-700 transition-colors")